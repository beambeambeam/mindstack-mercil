{
	"name": "mindstack-mercil",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"start": "turbo run start",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.3.0"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18.0.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,cjs,mjs,html,css,json}": "pnpm exec biome check --write --no-errors-on-unmatched",
		"apps/api/**/*.py": "bash -c 'cd apps/api && uv run ruff check --fix $(for f in \"$@\"; do echo \"${f#apps/api/}\"; done)' --"
	}
}
